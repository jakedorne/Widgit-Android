<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jaek.widgit.Fragments.CatalogueFragment">


    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catalogue_search"></SearchView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textColor="@android:color/white"
        android:background="#222222"
        android:layout_marginBottom="8dp"
        android:onClick="todoPressed"
        android:id="@+id/catalogue_button_weather" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note Keeper"
        android:textColor="@android:color/white"
        android:background="#222222"
        android:layout_marginBottom="8dp"
        android:onClick="notesPressed"
        android:id="@+id/catalogue_button_notekeeper" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Todo List"
        android:textColor="@android:color/white"
        android:background="#222222"
        android:layout_marginBottom="8dp"
        android:onClick="weatherPressed"
        android:id="@+id/catalogue_button_todolist" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:textColor="@android:color/white"
        android:background="#222222"
        android:layout_marginBottom="8dp"
        android:onClick="stopwatchPressed"
        android:id="@+id/catalogue_button_timer" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calendar"
        android:textColor="@android:color/white"
        android:background="#222222"
        android:layout_marginBottom="8dp"
        android:onClick="calendarPressed"
        android:id="@+id/catalogue_button_calendar" />

</LinearLayout>
